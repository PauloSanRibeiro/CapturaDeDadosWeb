@model RegisterUser



@{
    ViewData["Title"] = "Cadastro de Operador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />


<body id="bodyAccount">

    <h2 align="center">@ViewData["Title"]</h2>
    <hr />

    <div class="container" id="containerAccount">
        <hr />
        <div class="col-md-4" id="#colmd4AccountRegister">
            <h3 align="center">Cadastrar</h3>
            <form asp-controller="Account" asp-action="Register" method="post">
                <hr />
                <div class="form-group">
                    <div>
                        <label asp-for="Name"></label>
                        <div>
                            <input asp-for="Name" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="Email"></label>
                        <div>
                            <input asp-for="Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div>
                            <input asp-for="Password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <div>
                        <label asp-for="ConfirmPassword"></label>
                        <div>
                            <input asp-for="ConfirmPassword" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <button type="submit" class="btn btn-success">Confirmar</button>
            </form>
        </div>

        <div class="v1" id="v1Account"></div>

        <div class="col-md-4" id="colmd4AccountLogin">
            <h3 align="center">Login</h3>
            <form asp-controller="Account" asp-action="Login" method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <div>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" />
                            <label class="custom-control-label" asp-for="RememberMe"></label>
                        </div>
                    </div>*@

                <button type="submit" class="btn btn-success">Entrar</button>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

