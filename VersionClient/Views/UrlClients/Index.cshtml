@model IEnumerable<VersionClient.Models.UrlClient>

@{
    ViewData["Title"] = "Lista de Endereços";
}

<h2 align="center">@ViewData["Title"]</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

                <td align="right">
                    <a asp-action="Edit" asp-route-id="@item.IdUrlClient" class="btn btn-info">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdUrlClient" class="btn btn-warning">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdUrlClient" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
